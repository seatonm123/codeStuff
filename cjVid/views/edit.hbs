<form class="form" action="/todo" method="post">
  <div class="form-group">
    <label for="title">Title</label>
    <input value="{{title}}" type="text" class="form-control" id="title" placeholder="Enter a todo" name="title"/>
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea value="{{description}}" type="text" class="form-control" id="description" placeholder="Enter a description" name="description"></textarea>
  </div>
  <div class="form-group">
    <label for="priority">Priority</label>
    <select value="{{priority}}" class="form-control" id="priority" name="priority">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
  </div>
  <!-- <div class="form-group"> -->
    <!-- <label for="date">Date</label> -->
    <!-- <input value="{{date}}" type="text" class="form-control", id="date" placeholder="1"/> -->
  <!-- </div> -->
  <button type="submit" class="btn btn-default btn-danger">
    Update
  </button>
</form>
